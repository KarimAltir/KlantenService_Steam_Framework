@model KlantenService_Steam_Framework.Models.Game

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@{
    ViewData["Title"] = "Details";
}

<h1>@_localizer["Details"]</h1>
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @_localizer["Background Image"]
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Background_image" alt="background image" height="350px" />
        </dd>
        <dt class = "col-sm-2">
            @_localizer["Id"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @_localizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @_localizer["Slug"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class="col-sm-2">
            @_localizer["Released"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Released)
        </dd>
        <dt class="col-sm-2">
            @_localizer["Rating"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">@_localizer["Back to List"]</a>
</div>
